<% if !(document['mime_type_t'] & ['image/jpeg', 'image/png', 'image/bmp', 'image/gif', 'image/jpg']).empty? %>
  <img src="<%= "#{ActiveFedora.fedora_config.credentials[:url]}/objects/#{document['id']}/datastreams/content/content" %>" height="50" width="50" />
<% elsif !(document['mime_type_t'] & ['video/mp4']).empty? %>
  <video controls="controls" height="80" width="140">
    <source src="<%= "#{ActiveFedora.fedora_config.credentials[:url]}/objects/#{document['id']}/datastreams/content/content" %>"  />
    Your browser does not support the video tag.  :'(
  </video>
<% elsif !(document['mime_type_t'] & ['audio/mp3', 'audio/mpeg']).empty? %>
  <audio controls="controls" height="50" width="140">
    <source src="<%= "#{ActiveFedora.fedora_config.credentials[:url]}/objects/#{document['id']}/datastreams/content/content" %>"  />
    Your browser does not support the audio tag.  :'(
  </audio>
<% else %>
  default
<% end %>
