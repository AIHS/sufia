<!-- scholarsphere over ride -->
<!-- the sub on ':' is b.c. jQuery has trouble with '.' or ':' 
on element ids -->
<% if document.has_key?(:noid_s) %>
<tr id="document_<%= document[:noid_s].first.gsub(":", "_") %>"> <!--  class="document <%= cycle("even","odd") %>"> -->
  <!-- <td><%# check_box_tag :generic_file, document[:id] %></td> -->
  <td>
    <i id="expand_<%= document[:noid_s].first.gsub(":", "_") %>" class="icon-plus"></i>&nbsp;
    <%= render :partial => 'dashboard/_index_partials/thumbnail_display', :locals => {:document=>document} %>
    <%= link_to document[:label_t].first, generic_file_path(document[:noid_s].first) %> </td>
  <td><%= document[:noid_s].first %></td>
  <td><%= document.fetch(:system_create_dt,'').to_time.strftime("%c") %> </td>
  <td><%= document[:creator_t] %> </td>
  <td>
    <i class="icon-eye-open"></i>&nbsp;
    <i class="icon-eye-close"></i>&nbsp;
    <i class="icon-download"></i>
  </td>
</tr>
<tr class="hide" id="detail_<%= document[:noid_s].first.gsub(":", "_") %>"> <!--  document detail"> -->
  <td colspan="6">
    <dl>
      <dt>Title</dd>
      <dd><%= link_to render_document_show_field_value(:document=>document, :field=>"generic_file__title_t"), generic_file_path(document[:noid_s].first) %> </dd>

      <dt>Contributor</dd>
      <dd><%= render_document_show_field_value(:document=>document, :field=>"generic_file__contributor_t") %></dd>

      <dt>Format</dt>
      <dd><%= render_document_show_field_value(:document=>document, :field=>"format_label_t") %></dd>

      <dt>Date Modified</dt>
      <dd><%= document[:system_modified_dt] %></dd>
    </dl>
  </td>
</tr>
<% end %>
