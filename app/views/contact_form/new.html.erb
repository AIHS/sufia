<% stylesheet 'bootstrap.min.css' %>
<% content_for :local_css do %>
form {
  margin: 0;
}
<% end %>

<span class="notice" style="float: right">Page is in draft form</span>
<h1>Contact</h1>
<p>
Please use the contact form to submit inquiries about ScholarSphere in 
general, to report a problem you are experiencing with the system, to 
request assistance using ScholarSphere; or to provide usability testing 
feedback.
</p>

<h2>Contact Form</h2>
<%= form_for(@contact_form, :url => contact_form_index_path, :html => {:class => 'form-horizontal well'}) do |f| %>
  <%= f.text_field :contact_method, :class => 'hide' %>

  <div class="control-group">
    <%= f.label :name, 'Your Name', :class=>"control-label" %>
    <div class="controls"><%= f.text_field :name, :class=>"input-xlarge", :value=>"", :required => true %>  </div>
  </div>

  <div class="control-group">
    <%= f.label :email, 'Your Email', :class=>"control-label" %>
    <div class="controls">
    <%= f.text_field :email, :class=>"input-xlarge", :value=>"", :required => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :message, 'Message', :class=>"control-label" %>
    <div class="controls">
    <%= f.text_area :message, :class=>"input-xlarge", :value=>"", :required => true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :value => "Send", :class => "btn-primary btn-large"  %>
  </div>
<% end %>
