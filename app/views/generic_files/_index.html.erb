<!-- the sub on ':' is b.c. jQuery has trouble with '.' or ':' 
  on element ids -->
<tr id="document_<%= document[:id].gsub(":", "_") %>"> <!--  class="document <%= cycle("even","odd") %>"> -->
  <td><%= check_box_tag :generic_file, document[:id] %></td>
  <td>
    <i id="expand_<%= document[:id].gsub(":", "_") %>" class="icon-plus"></i>&nbsp;<%= link_to document[:title_t], generic_file_path(document[:id]) %> </td>
  <td><%= document[:id] %></td>
  <td>
    <%# DateTime.parse(document.fetch(:system_create_dt,nil)).to_time %>
    <%= document.fetch(:system_create_dt,nil).to_time.strftime("%c") %>
    <%# (document.fetch(:medium_t,nil) || document_type(document)).gsub("Hydrangea","") %>
  </td>
  <!-- <td><%= get_file_asset_count(document)%></td> -->
  <td><%= document[:creator_t] %> </td>
  <td>
    <i class="icon-eye-open"></i>&nbsp;
    <i class="icon-eye-close"></i>&nbsp;
    <i class="icon-download"></i>
  </td>
</tr>
<tr class="hide" id="detail_<%= document[:id].gsub(":", "_") %>"> <!--  document detail"> -->
  <td colspan="6">
    <dl>
      <dt>Title</dd>
      <dd> <%= link_to document[:title_t], generic_file_path(document[:id]) %> </dd>

      <dt>Contributor</dd>
      <dd><%= document[:contributor_t] %></dd>

      <dt>Format</dt>
      <dd><%= document[:format] %></dd>

      <dt>Date Modified</dt>
      <dd><%= document[:date_modified] %></dd>
    </dl>
  </td>
</tr>
