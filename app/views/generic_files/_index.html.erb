<!-- gamma over ride -->
<!-- the sub on ':' is b.c. jQuery has trouble with '.' or ':' 
on element ids -->
<tr id="document_<%= document[:id].gsub(":", "_") %>"> <!--  class="document <%= cycle("even","odd") %>"> -->
  <!-- <td><%# check_box_tag :generic_file, document[:id] %></td> -->
  <td>
    <i id="expand_<%= document[:id].gsub(":", "_") %>" class="icon-plus"></i>&nbsp;<%= link_to document[:label_t], generic_file_path(document[:id]) %> </td>
  <td><%= document[:id] %></td>
  <td><%= document.fetch(:system_create_dt,nil).to_time.strftime("%c") %> </td>
  <td><%= document[:creator_t] %> </td>
  <td>
    <i class="icon-eye-open"></i>&nbsp;
    <i class="icon-eye-close"></i>&nbsp;
    <i class="icon-download"></i>
  </td>
</tr>
<tr class="hide" id="detail_<%= document[:id].gsub(":", "_") %>"> <!--  document detail"> -->
  <td colspan="6">
    <dl>
      <dt>Title</dd>
      <dd> <%= link_to document[:generic_file__title_t], generic_file_path(document[:id]) %> </dd>

      <dt>Contributor</dd>
      <dd><%= render_document_show_field_value(:document=>document, :field=>"generic_file__contributor_t") %></dd>

      <dt>Format</dt>
      <dd><%= document[:format_label_t] %></dd>

      <dt>Date Modified</dt>
      <dd><%= document[:system_modified_dt] %></dd>
    </dl>
  </td>
</tr>
