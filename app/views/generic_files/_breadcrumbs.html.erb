<div class="breadcrumbs">
  <% home_url = link_to('Home', root_path) unless current_user %>
  <% home_url = link_to('Home', root_path)+'  / '+ link_to('Dashboard', dashboard_path) if current_user %>
  <%=
     case request.referer
     when /dashboard/
       home_url
     when /files/
       home_url+'  / '+link_to( 'Back to previous', request.referer)
     when /catalog/
       home_url+'  / '+link_to( 'Back to Search Results', request.referer)
     else
       link_to 'Home', root_path
     end
  %>
  &nbsp;/&nbsp;
  <span class="active">
    <%= @generic_file.title.join(' | ') %>
  </span>
</div><!-- /breadcrumbs -->
