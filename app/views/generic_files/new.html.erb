<div class="page-header">
  <h1>Upload Files</h1>
  <p> When you have completed your upload you will automatically be redirected to the <%= link_to("dashboard", dashboard_path) %>.</p>
</div>
<%= form_for(@generic_file, :html => {:multipart => true, :class => 'form-horizontal'}) do |f| %>
<%= hidden_field_tag(:file_count, "1") %>
<%= hidden_field_tag(:extra_description_count, "1") %>

<div class="uploader-contents">
  <div class="row">
    <div class="span3">
      <h2>Choose File(s)</h2>
    </div>
    <div class="span9">
      <p>Select a file to upload from your computer.  Click the <strong>Add Files</strong> button to upload more than one file.</p>
      <p id="upload_field_1">
      <%= file_field_tag "Filedata[]",  :webkitdirectory=>"", :directory=>"", :mozdirectory=>"" %>
      </p>
      <div id="additional_files"></div>
      <%= f.submit :value => "+Add More Files", :name=> "additional_files_submit", :id => "additional_files_submit", :class=> "btn-info btn-small" %>
    </div> <!-- close .span9 -->
  </div><!-- close .row choose file section-->

  <div class="row">
    <div class="span3">
        <h2>Description(s)</h2>
    </div>
    <div class="span9">
      <div class="control-group" id="additional_based_near_clone">
        <%= f.label :based_near, :class=>"control-label" %> 
        <%= f.text_field :based_near, :class=>"controls", :name=>"generic_file[based_near][]"  %> 
        <%= f.submit :value => "+", :name=> "additional_based_near", :id => "additional_based_near_submit", :class => "adder btn-info btn-mini"  %>
      </div>
      <div id="additional_based_near_elements"></div>

      <div class="control-group" id="additional_contributor_clone">
        <%= f.label :contributor, :class=>"control-label" %> 
